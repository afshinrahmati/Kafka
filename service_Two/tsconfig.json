{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "app2",
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "types": [
      "node",
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}